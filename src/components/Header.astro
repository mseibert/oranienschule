---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import logo from '../assets/images/transparentes-logo.png';

// Check if we're on the Förderkreis page
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const isFoerderkreisPage = pathname === '/Foerderkreis' || pathname.startsWith('/Foerderkreis/');
---

<header>
	<nav>
		<a href="/"><Image src={logo} alt="Oranienschule Wiesbaden" width="400" height="115" /></a>
		<div class="internal-links">
			<HeaderLink href="/">Start</HeaderLink>
			<HeaderLink href="/blog">News</HeaderLink>
			<HeaderLink href="/foerderkreis">Förderkreis</HeaderLink>
			<HeaderLink href="/projekte">Projekte</HeaderLink>
		</div>
		<a href="/mitglied-werden" class="cta-button">
			<span class="cta-text">Mitglied werden</span>
		</a>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	
	/* CTA Button Styling */
	.cta-button {
		background: #ff6600;
		color: white !important;
		padding: 7px 18px !important;
		border-radius: 6px;
		font-weight: 500;
		font-size: 1em;
		text-decoration: none;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 6px;
		transition: all 0.3s ease;
		box-shadow: 0 2px 8px rgba(255, 102, 0, 0.3);
		border: none;
		min-width: 140px;
		text-align: center;
		line-height: 1.2;
		vertical-align: middle;
	}
	
	.cta-button:hover {
		background: #e55a00;
		transform: translateY(-1px);
		box-shadow: 0 4px 12px rgba(255, 102, 0, 0.4);
	}
	
	.cta-button:active {
		transform: translateY(0);
		box-shadow: 0 2px 6px rgba(255, 102, 0, 0.3);
	}
	
	.cta-text {
		font-size: 1em;
		font-weight: 500;
		line-height: 1.2;
		text-align: center;
		display: inline-block;
		vertical-align: middle;
	}
	
	.cta-icon {
		font-size: 1em;
		font-weight: bold;
		transition: transform 0.3s ease;
		line-height: 1.2;
		vertical-align: middle;
	}
	
	.cta-button:hover .cta-icon {
		transform: translateX(3px);
	}
	
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		
		.cta-button {
			min-width: 120px;
			padding: 6px 10px !important;
		}
		
		.cta-text {
			font-size: 0.85em;
		}
	}
</style>
